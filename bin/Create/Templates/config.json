{
    "controller": {
        "template": "controller.tpl",
        "path": "controller/",
        "vars": {
            "author": "$",
            "email": "$",
            "package": "$"
        }
    },
    "model": {
        "template": "model.tpl",
        "path": "model/",
        "vars": {
            "author": "$",
            "email": "$",
            "package": "$"
        }
    },
    "middleware": {
        "template": "middleware.tpl",
        "path": "middleware/",
        "vars": {
            "author": "$",
            "email": "$",
            "package": "$"
        }
    }
}
